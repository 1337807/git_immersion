<body>
  <header>
    <a href="index.html" id="home_link">Git Immersion</a>
    <a href="http://edgecase.com" target="_blank" id="edgecase_link">Brought to you by EdgeCase</a>

    <nav>
      <%= nav_links(f, lab) %>
    </nav>
  </header>
  
  <div id="main_content">
    <%= lab_html %>
  </div>
  
  <div id="index">
    <h1>Labs Index</h1>
    <ul>
      <% labs.each do |l| -%>
        <li><a href="<%= l.filename %>"><span><%= l.number %>:</span> <%= l.name %></a></li>
      <% end -%>
    </ul>
  </div>
  
  <footer>
    <nav>
      <%= nav_links(f, lab) %>
    </nav>
  </footer>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script> 
  <script type="text/javascript">
  $(function() {
    $('.index_button a').click(function(e) {
      e.preventDefault();
      $('#index').fadeToggle(200);
    });
    
    $('#index ul').hover(
      function() { $(this).addClass('hover'); },
      function() { $(this).removeClass('hover'); }
    );
    
    $(document).click(function(e) {
      if (!$(e.target).closest('#index, .index_button').length) {
        $('#index').fadeOut(100);
      }
    }).keyup(function(e) {
      if(e.keyCode == 27) { $('#index').fadeOut(100); }
    });
  });
  </script>
